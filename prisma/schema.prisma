generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

//Schemas
model Admin {
  id             String    @id @default(auto()) @map("_id") @db.ObjectId
  email          String    @unique
  hashedPassword String
  role           AdminRole @default(super_admin)
  suspended      Boolean   @default(false)
  createdAt      DateTime  @default(now())
  updatedAt      DateTime  @updatedAt
}

model Contestants {
  id                 String   @id @default(auto()) @map("_id") @db.ObjectId
  studentId          String   @unique
  studentFullName    String
  studentEmail       String
  studentPhoneNumber String
  gender             Gender
  studentDateOfBirth String
  studentClass       String
  category           String
  schoolName         String
  schoolLocation     String
  schoolPhoneNumber  String
  tutorName          String
  tutorPhoneNumber   String
  hasPaid            Boolean? @default(false)
  createdAt          DateTime @default(now())
  updatedAt          DateTime @updatedAt
}

model Events {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  title     String
  subtitle  String?
  body      String?
  image     String?
  date      DateTime
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Materials {
  id             String   @id @default(auto()) @map("_id") @db.ObjectId
  downloadedUser String   @unique
  title          String
  author         String?
  body           String?
  downloadLink   String
  type           String
  size           Float
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt
}

model Gallery {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  images      String[]
  description String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

//Enums
enum AdminRole {
  admin
  super_admin
}

enum Gender {
  male
  female
}
